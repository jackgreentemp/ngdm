/* pages/answer/answer.wxss */

.answer-title {
  margin-top: 20rpx;
  margin-left: 30rpx;
  height: 100rpx;
  width: 700rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}

.userinfo-avatar {
  width: 80rpx;
  height: 80rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.answer-ad-image {
  width: 700rpx;
  height: 700rpx;
  margin: 20rpx 10rpx;
}

.giveUp-button {
  color: black;
  background-color:cornflowerblue;
  margin-top: 30rpx;
  width: 50%;
  border-radius: 40rpx;
}


.end-promotion {
  display: flex;
  text-align: center;
  align-items: center;
  justify-content: center;
}